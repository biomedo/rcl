\bind "C-j g i"      "math-insert \iota"
\bind "C-j g j"      "math-insert \varphi"
\bind "C-j g k"      "math-insert \kappa"
\bind "C-j g l"      "math-insert \lambda"
\bind "C-j g m"      "math-insert \mu"
\bind "C-j g n"      "math-insert \nu"
\bind "C-j g o"      "math-insert \omega"
